<div id="inside">
	<div id="main">
		<h1>Create a new account</h1>
		<%= form_for(@user) do |f| %>
		<div class="field" >
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div class="field" >
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div class="actions" >
			<%= f.submit "Sign up" %>
		</div>
		<% end %>
	</div>
	<div id="sidebar">
		SIDEBAR
		<p>
			Navigation
			<ul>
				<%= link_to "Sign up", new_user_path %>
			</ul>
		</p>
	</div>
	<div id="footer">
		FOOTER to contain disclaimer
	</div>
</div>
