<%= form_for @item do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br />
	<%= f.text_area :body %>
	<br />
	<%= f.label :done %>
	<%= f.check_box :done %>
	<br />
</div>
<div class="actions">
	<%= f.submit "Submit" %>
</div>
<% end %> 