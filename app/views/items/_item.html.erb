<tr>
	<td class="items"><span class="title"><%= item.title %></span></td>
	<td class="items"><span class="body"><%= item.body %></span></td>
	<td class="items"><span class="done"><%= item.done %></span></td>
	
	<% if current_user?(item.user) %>
    <td>
    	<%= link_to "edit", edit_item_path(item)%>
    </td>
	<td>
		<%= link_to "delete", item, :method => :delete,
		                            :confirm => "You sure?",
		                            :title => item.title %>
    </td>
    <% end %>  
</tr>
