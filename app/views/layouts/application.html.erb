<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
      <%= render 'layouts/header' %>
      <section class = "round" >
          <div id="inside">
	<div id="main">
      <section class = "round" >
      	<% flash.each do |key, value| %>
      	  <div class="flash <%= key %>"><%= value %></div>
      	<% end %>
		<%= yield %>
	  </section>
	</div>
	
	<div id="sidebar">
		<p>
			<ul>
			<li><%= link_to "Home", root_path %></li>
			<% if signed_in? %>
			<li><%= link_to "My List", users_path(@user) %>
			<li><%= link_to "Sign out", signout_path %></li>
			<% else %>
			<li><%= link_to "Sign in", signin_path %></li>
			<% end %>
		</p>
	</div>
	
	<div id="footer">All work done by Westley Mojica</div>
</div>

      </section>
  </div>
</body>
</html>
