<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
      <%= render 'layouts/header' %>
      <section class = "round" >
          <div id="inside">
	<div id="main">
	<%= yield %>
	</div>
	
	<div id="sidebar">
		<p>
			<h3>navigation</h3>
			<ul>
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "About", about_path %></li>

			<% if signed_in? %>
			<li><%= link_to "Sign out", signout_path %></li> 
			<% else %>
			<li><%= link_to "Sign in", signin_path %></li>
			<% end %>
		</p>
	</div>
	
	<div id="footer">FOOTER to contain disclaimer</div>
</div>

      </section>
  </div>
</body>
</html>
